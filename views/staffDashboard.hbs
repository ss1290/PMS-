<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheet/staff.css">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <div class="heading1">
            <h1 class="heading" style="font-size:50px;"><span class="fas fa-plus"
                    style="font-size:40px;color:rgb(142, 142, 179);border-style:solid;border-radius:100%;padding:10px;border-width:7px;"></span>&ensp;
                PMS</h1>
            <button class="logoutButton" onclick="logout()"><span class="fas fa-power-off"></span>&ensp;Logout</button>
            </div>
            <h1 class="heading2" id="heading2">Staff Dashboard</h1>
            <div class="navigationbar">
                <button class="dashboard1" onclick="dboard1()"><span><input type=image class="dashboardimage"
                src="/img/dashboard.png"></span></span>&nbsp;Dashboard</button>
                <br>
                <button class="patient1" onclick="showPatient()"><span><input type=image class="patientimage"
                src="/img/patient.png"></span>&emsp;Patient</button>
                <br>
                <button class="profile1" onclick="showProfile()"><span><input type=image class="profileimage"
                src="/img/profile.png"></span>&emsp;Profile</button>
                </div>
                <div class="dash1" id="dash1">
                    <div class="admit1">
                        <input type=image class="admitimage" src="/img/admit.png">
                        <button class="admit-button1" onclick="showAdmit()">Admit</button>
                    </div>
                    <br>
                    <div class="discharge1">
                        <input type=image class="dischargeimage" src="/img/admit.png">
                        <button class="discharge-button1" onclick="showDischarge()">Discharge</button>
                    </div>
                    <br>
                    <div class="appointments1">
                        <input type=image class="appointmentimage" src="/img/patient.png">
                        <button class="appointment-button1" onclick="addAppointments()">New Registration/New Appointments</button>
                    </div>
                </div>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
                <script>
                    function showProfile(){
                        var {token} = Qs.parse(location.search, { ignoreQueryPrefix: true })
                        location.href = `/staffprofile?&token=${token}`   
                    }
                </script>
                <script>
                    function dboard1() {
                        var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                        location.href = `/dashboard/staff?&token=${token}`
                    }
                </script>
                <script>
                    function showPatient() {
                        var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                        location.href = `/staff/patient?&token=${token}&page=${0}`
                        }
                </script>
                <script>
                    function showAdmit() {
                        var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                        location.href = `/staff/admit?&token=${token}&page=${0}`
                        }
                </script>
                <script>
                    function showDischarge() {
                        var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                        location.href = `/staff/discharge?&token=${token}&page=${0}`
                    }
                </script>
                <script>
                    function addAppointments() {
                        var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                        location.href = `/staff/patientregistration?&token=${token}&page=${0}`
                    }
                </script>
                <script src="/js/logout.js"></script>

        </body>
</html>