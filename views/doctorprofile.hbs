<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/stylesheet/doctor.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=2.0">
</head>

<body>
    <div class="heading1">
        <h1 class="heading" style="font-size:50px;"><span class="fas fa-plus"
                style="font-size:40px;color:rgb(142, 142, 179);border-style:solid;border-radius:100%;padding:10px;border-width:7px;"></span>&ensp;
            PMS</h1>
        <button class="logoutButton" id="logoutButton" onclick="logout()"><span
                class="fas fa-power-off"></span>&ensp;Logout</button>
    </div>
    <h1 class="heading2" id="heading2">My Profile</h1>
    <div class="navigationbar">
        <button class="dashboard1" onclick="dboard1()"><span><input type=image class="dashboardimage"
                    src="/img/dashboard.png"></span></span>&nbsp;Dashboard</button>
        <br>
        <br>
        <button class="patient1" onclick="showPatient()"><span><input type=image class="patientimage"
                    src="/img/patient.png"></span>&emsp;Patient</button>
        <br>
        <button class="profile1" onclick="showProfile()"><span><input type=image class="profileimage"
                    src="/img/profile.png"></span>&emsp;Profile</button>
    </div>
    <div id="profile1" class="showdoctor">
        <div class="profilebar">
            <input type=image class="feed1" src="/img/feed.png">
            <p class="Dlist2">Manage Profile</p>
        </div>
        <form id="Profile" class="profile">
            <label>Name</label>
            <input type="text" id="editName" value="{{name}}" required>
            <br>
            <label>Email</label>
            <input type="text" id="editEmail" value="{{email}}" required>
            <br>
            <label>Address</label>
            <input type="text" id="editAddress" value="{{address}}" required>
            <br>
            <label>Phone No</label>
            <input type="text" id="editPhoneNo" value="{{phoneNumber}}" required>
            <br>
            <label>Password</label>
            <input type="text" id="editPassword" required>
            <br>
            <label>New Password</label>
            <input type="text" id="editNewPassword">
            <br>
            <label>Confirm Password</label>
            <input type="text" id="editConfirmPassword">
            <br>
            <button class="update1">Update</button>
        </form>
    </div>
    <p id="message" class="message"></p>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
    <script>
        function showProfile() {
            var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
            location.href = `/doctorprofile?&token=${token}`
        }
    </script>

    <script src="/js/logout.js"></script>
    <script src="/js/doctorprofile.js"></script>
   <script>
        function dboard1() {
            var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
             location.href = `/dashboard/doctor?&token=${token}`
        }
    </script>
    <script>
        function showPatient() {
            var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
            location.href = `/doctor/patient?&token=${token}&page=${0}`
        }
    </script>
</body>
</html>