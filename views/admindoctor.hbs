<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheet/admin.css">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <div class="heading1">
        <h1 class="heading" style="font-size:60px;"><span class="fa fa-plus"
                style="font-size:60px;color:rgb(142, 142, 179);border-style:solid;border-radius:100%;padding:10px;border-width:2px;"></span>
            PMS <button class="logoutButton" onclick="logout()"><span class="fas fa-power-off"></span>&ensp;Logout</button></h1>
        </div>
        <h1 class="heading2" id="heading2">Doctor Details</h1>
        <div class="navigationbar">
            <button class="dashboard1" onclick="dboard1()"><span><input type=image class="dashboardimage"
                        src="/img/dashboard.png"></span></span>&nbsp;Dashboard</button>
            <br>
            <button class="doctor1" onclick="showDoctor()"><span><input type=image class="doctorimage"
                        src="/img/doctor.jpg"></span>&emsp;Doctor</button>
            <br>
            <button class="patient1" onclick="showPatient()"><span><input type=image class="patientimage"
                        src="/img/patient.png"></span>&emsp;Patient</button>
            <br>
            <button class="staff1" onclick="showStaff()"><span><input type=image class="staffimage" src="/img/staff.png"
                        </span>&emsp;Staff</button>
            <br>
            <button class="profile1" onclick="showProfile()"><span><input type=image class="profileimage"
                        src="/img/profile.png"></span>&emsp;Profile</button>
        </div>
        <div class="dbar1" id="dbar1">
            <div class="doctorBar1">
                <input type=image class="feed1" src="/img/feed.png">
                <button class="Dlist1" onclick="viewDoctor()">Doctor List</button>
                <button class="Dadd1" onclick="addDoctor()">Add Doctor</button>
            </div>
            <div class="searchbox1" id="searchbox1">
                <span class="fas fa-search" style="position:absolute;margin-top:5px;margin-left:5px;"></span>
                <input type="text" placeholder="search" id="doctorsearch" style="padding-left:50px;">
            </div>
            <table class="doctorlist" id="doctorlist">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Doctor Name</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="list1">
                </tbody>
            </table>
            <button class="next" id="edit2" onclick="next()">next</button>
            <div class="addDoctor" id="addDoctor" style="display:none">
                <p class="add1">Add Doctor</p>
                <form id="DoctorForm" class="DoctorForm">
                    <label>Name</label>
                    <input type="text" id="Name" required>
                    <br>
                    <label>Email</label>
                    <input type="text" id="Email" required>
                    <br>
                    <label>Password</label>
                    <input type="text" id="Password" required>
                    <br>
                    <label>Address</label>
                    <input type="text" id="Address" required>
                    <br>
                    <label>Phone No</label>
                    <input type="text" id="PhoneNo" required>
                    <br>
                    <label>Department</label>
                    <input type="text" id="Department" required>
                    <br>
                    <div class="nextline">
                        <label>Time From</label>
                        <input type="text" id="TimeFrom" required>
                        <br>
                        <label>Time To</label>
                        <input type="text" id="TimeTo" required>
                        <br>
                        <label>Consultancy Fee</label>
                        <input type="text" id="ConsultancyFee" required>
                        <br>
                        <label>Consultancy Day</label>
                        <input type="text" id="ConsultancyDay" required>
                        <br>
                    </div>
                    <button class="adddoctorbutton">Submit</button>
                </form>
                <p id="message" class="message"></p>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
        <script src="/js/doctorshow.js"></script>
        <script src="/js/doctorsignup.js"></script>
        <script>
            function addDoctor() {
                document.getElementById('doctorlist').style.display = "none"
                document.getElementById('searchbox1').style.display = "none"
                document.getElementById('addDoctor').style.display = "block"
                document.getElementById('edit2').style.display = "none"

            }
        </script>
        <script>
            function viewDoctor() {
                document.getElementById('doctorlist').style.display = ""
                document.getElementById('searchbox1').style.display = ""
                document.getElementById('addDoctor').style.display = "none"
                document.getElementById('edit2').style.display = "none"
            }
        </script>
        <script>
            function showDoctor() {
                var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                location.href = `/admin/doctor?&token=${token}&page=${0}`
            }
        </script>
        <script>
            function dboard1() {
                var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                location.href = `/dashboard/admin?&token=${token}`
            }
        </script>
        <script>
            function showStaff() {
                var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                location.href = `/admin/staff?&token=${token}&page=${0}`
            }
        </script>
        
        <script>
            function showPatient() {
                var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                location.href = `/admin/patient?&token=${token}&page=${0}`
            }
        </script>
        <script>
            function showProfile() {
                var { token } = Qs.parse(location.search, { ignoreQueryPrefix: true })
                location.href = `/adminprofile?&token=${token}`
            }
        </script>
        <script src="/js/logout.js"></script>
    </body>
</html>