<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheet/styles.css">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <div class="heading1">
        <h1 class="heading" style="font-size:50px;"><span class="fas fa-plus"
                style="font-size:40px;color:rgb(142, 142, 179);border-style:solid;border-radius:100%;padding:10px;border-width:7px;"></span>&ensp;
            PMS</h1>
        <button class="logoutButton" id="logoutButton" onclick="logout()"><span class="fas fa-power-off"></span>&ensp;Logout</button>
        </div>
        <h1 class="heading2" id="heading2">Doctor Dashboard</h1>
        <div class="navigationbar">
            <button class="dashboard1" onclick="dboard1()"><span><input type=image class="dashboardimage"
                        src="/img/dashboard.png"></span></span>&nbsp;Dashboard</button>
            <br>
            <br>
            <button class="patient1" onclick="showPatient()"><span><input type=image class="patientimage"
                        src="/img/patient.png"></span>&emsp;Patient</button>
            <br>
            <button class="profile1" onclick="showProfile()"><span><input type=image class="profileimage"
                        src="/img/profile.png"></span>&emsp;Profile</button>
        </div>
        <div class="dash2" id="dash2">
            <div class="appointments1">
                <input type=image class="appointmentimage" src="/img/appointments.jpg">
                <button class="appointment-button1" onclick="viewAppointment()">View Appointments</button>
            </div>
        </div>
        <div id="profile1" class="showDoctor" style="display:none">
            <div class="profilebar">
                <input type=image class="feed1" src="/img/feed.png">
                <p class="Dlist2">Manage Profile</p>
            </div>
            <form id="Profile" class="profile">
                <label>Name</label>
                <input type="text" id="editName" value="{{name}}" required>
                <br>
                <label>Email</label>
                <input type="text" id="editEmail" value="{{email}}" required>
                <br>
                <label>Address</label>
                <input type="text" id="editAddress" value="{{address}}" required>
                <br>
                <label>Phone No</label>
                <input type="text" id="editPhoneNo" value="{{phoneNumber}}" required>
                <br>
                <label>Password</label>
                <input type="text" id="editPassword" required>
                <br>
                <label>New Password</label>
                <input type="text" id="editNewPassword">
                <br>
                <label>Confirm Password</label>
                <input type="text" id="editConfirmPassword">
                <br>
                <button class="update1">Update</button>
            </form>
        </div>
        <div id="viewAppointments" class="viewAppointments" style="display:none;">
            <div class="appointmentBar">
                <input type=image class="feed1" src="/img/feed.png">
                <p class="Dlist2">View Appointments</p>
            </div>
            <div class="searchbox1" id="searchbox3">
                <span class="glyphicon glyphicon-search" style="position:absolute;margin-top:325px;margin-left:5px;"></span>
                <input type="text" placeholder="search" style="padding-left:50px;">
            </div>
            <table class="Appointmentlist" id="Appointmentlist">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Patient Name</th>
                    </tr>
                </thead>
                <tbody id="list6">
                </tbody>
            </table>
        </div>
        <div class="pbar1" id="pbar1" style="display:none">
            <div class="patientBar2">
                <input type=image class="feed1" src="/img/feed.png">
                <button class="Plist1" onclick="viewPatient()">Patient List</button>
                <button class="Padd1" onclick="addPatient()">Add Patient</button>
            </div>
            <div class="searchbox1" id="searchbox1">
                <span class="glyphicon glyphicon-search" style="position:absolute;margin-top:325px;margin-left:5px;"></span>
                <input type="text" placeholder="search" style="padding-left:50px;">
            </div>
            <table class="patientlist" id="patientlist">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Patient Id</th>
                        <th>Patient name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Blood Group</th>
                        <th>Birth Date</th>
                    </tr>
                </thead>
                <tbody id="List3">
        
                </tbody>
            </table>
            <div class="addPatient" id="addPatient" style="display:none">
                <p class="add1">Add Patient</p>
                <form id="PatientForm">
                    <label>Patient Name</label>
                    <input type="text" id="patientName" required>
                    <br>
                    <label>Patient Id</label>
                    <input type="text" id="patientId" required>
                    <br>
                    <label>Email</label>
                    <input type="text" id="patientEmail" required>
                    <br>
                    <label>Address</label>
                    <input type="text" id="patientAddress" required>
                    <br>
                    <label>Phone No</label>
                    <input type="text" id="patientPhoneNo" required>
                    <br>
                    <label>Age</label>
                    <input type="text" id="age" required>
                    <br>
                    <label for="gender">Gender</label>
                    <select id="gender" name="gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <br>
                    <label for="bloodGroup">Blood Group</label>
                    <select id="bloodGroup" name="bloodGroup">
                        <option value="O positive">O+</option>
                        <option value="A positive">A+</option>
                        <option value="B positive">B+</option>
                        <option value="AB positive">AB+</option>
                        <option value="O negative">O-</option>
                        <option value="A negative">A-</option>
                        <option value="B negative">B-</option>
                        <option value="AB negative">AB-</option>
                    </select>
                    <br>
                    <label for="birthDate">Birth Date</label>
                    <input type="date" id="birthDate" name="birthDate">
                    <br>
                    <button class="addpatientbutton">Submit</button>
                </form>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
        <script>
            function showProfile(){
                document.getElementById('profile1').style.display=''
                document.getElementById('dash2').style.display = 'none'
                document.getElementById('heading2').textContent = "My Profile"
                document.getElementById('viewAppointments').style.display = 'none'
                document.getElementById('pbar1').style.display = 'none'
            }
        </script>
        <script>
            function showPatient(){
                document.getElementById('profile1').style.display = 'none'
                document.getElementById('heading2').textContent="Patient Details"
                document.getElementById('dash2').style.display = 'none'
                document.getElementById('viewAppointments').style.display='none'
                document.getElementById('pbar1').style.display = 'block'
            }
        </script>
        <script>
            function dboard1(){
                document.getElementById('profile1').style.display = 'none'
                document.getElementById('dash2').style.display = '' 
                document.getElementById('heading2').textContent = "Doctor Dashboard"
                document.getElementById('viewAppointments').style.display = 'none'
                document.getElementById('pbar1').style.display = 'none'
            }
        </script>
        <script>
            function viewAppointment(){
                document.getElementById('viewAppointments').style.display = ''
                 document.getElementById('dash2').style.display = 'none'
                 document.getElementById('heading2').textContent = "Appointment Details"
                 document.getElementById('pbar1').style.display = 'none'
            }
        </script>
        <script>
            function viewPatient() {
                document.getElementById('patientlist').style.display = ""
                document.getElementById('searchbox1').style.display = ""
                document.getElementById('addPatient').style.display = "none"
            }
        </script>
        <script>
            function addPatient() {
                document.getElementById('patientlist').style.display = "none"
                document.getElementById('searchbox1').style.display = "none"
                document.getElementById('addPatient').style.display = "block"
            }
        </script>
        <script src="/js/doctorprofile.js"></script>
        <script src="/js/pshow.js"></script>
        <script src="/js/padd.js"></script>
        <script src="/js/logout.js"></script>
    </body>
</html>